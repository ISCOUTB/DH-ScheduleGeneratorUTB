# Base de datos PostgreSQL
POSTGRES_DB=schedules
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
DATABASE_URL=postgresql://postgres:your_postgres_password_here@db:5432/schedules

# Microsoft Entra ID (Azure AD) - Autenticación
# Obtener desde Azure Portal > App registrations > tu app
AZURE_TENANT_ID=your_tenant_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here

# URLs de redirección (ajustar según el entorno)
# Desarrollo: http://localhost
# Producción: https://tu-dominio.com
AZURE_REDIRECT_URI=http://localhost/api/auth/callback
FRONTEND_URL=http://localhost

# Tenants permitidos (separados por coma)
# Añadir los tenant IDs de las organizaciones que pueden acceder
AZURE_ALLOWED_TENANTS=your_tenant_id_here
